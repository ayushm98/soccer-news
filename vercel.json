{
  "builds": [
    {
      "src": "backend/app.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/app.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/build/$1"
    }
  ],
  "build": {
    "frontend": {
      "use": "@vercel/static-build",
      "src": "frontend/package.json",
      "buildCommand": "npm run build",  
      "outputDirectory": "frontend/build"
    }
  }
}
